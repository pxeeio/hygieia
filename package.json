{
    "name": "hygieia",
    "version": "0.1.0",
    "type": "module",
    "license": "MIT",
    "author": "Rodrigo Bondoc",
    "description": "A TypeScript project scaffolding tool CLI that streamlines initial setup with linting and code formatting on-save.",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "unbuild",
        "check:types": "tsc --noEmit",
        "dev": "tsx src/index.ts",
        "test": "vitest run",
        "test:build": "pnpm build && VITE_TEST_BUILD=1 vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest"
    },
    "keywords": [],
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/minimist": "^1.2.2",
        "@types/node": "^18.15.11",
        "@types/prompts": "^2.4.4",
        "@vitest/coverage-c8": "^0.30.1",
        "cross-spawn": "^7.0.3",
        "execa": "^7.1.1",
        "fs-extra": "^11.1.1",
        "kolorist": "^1.7.0",
        "minimist": "^1.2.8",
        "prettier": "^2.8.7",
        "prompts": "^2.4.2",
        "tsx": "^3.12.6",
        "typescript": "^5.0.4",
        "unbuild": "^1.2.1",
        "vite": "^4.2.2",
        "vitest": "^0.30.1"
    }
}
