{
    "name": "hygieia",
    "version": "0.1.0",
    "type": "module",
    "license": "MIT",
    "author": "Rodrigo Bondoc",
    "description": "A TypeScript project configuration CLI tool that streamlines initial setup with linting, code style, and type checks.",
    "bin": {
        "hygieia": "index.js"
    },
    "files": [
        "index.js",
        "dist"
    ],
    "scripts": {
        "build": "unbuild",
        "check:code": "pnpm check:types && pnpm lint",
        "check:types": "tsc --noEmit",
        "dev": "tsx src/index.ts",
        "lint": "eslint . --cache --ext .ts",
        "lint:fix": "eslint --fix",
        "lint:fix-dry": "eslint --fix-dry-run",
        "test": "vitest run",
        "test:build": "pnpm build && VITE_TEST_BUILD=1 vitest run",
        "test:coverage": "vitest run --coverage",
        "test:unit": "vitest run --dir __tests__/unit",
        "test:watch": "vitest --watch"
    },
    "keywords": [],
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/getos": "^3.0.1",
        "@types/minimist": "^1.2.2",
        "@types/node": "^18.15.11",
        "@types/prompts": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "@vitest/coverage-c8": "^0.30.1",
        "cross-spawn": "^7.0.3",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-define-config": "^1.18.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-regexp": "^1.14.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "execa": "^7.1.1",
        "fs-extra": "^11.1.1",
        "getos": "^3.2.1",
        "kolorist": "^1.7.0",
        "minimist": "^1.2.8",
        "os-name": "^5.1.0",
        "prettier": "^2.8.7",
        "prompts": "^2.4.2",
        "tsx": "^3.12.6",
        "typescript": "^5.0.4",
        "unbuild": "^1.2.1",
        "vite": "^4.2.2",
        "vitest": "^0.30.1"
    }
}
